{
  "manifest_version": 2,
  "name": "way2b1_experimental",
  "short_name": "w_e",
  "version": "1.0.0",
  "author": "Elizabeth <ekeleshian@gmail.com>",
  "description": "TBA",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": [
        "src/extension.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Thing",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "dist/extension.js", "our_logo_32x32.png", "HomemadeApple-Regular.ttf", "personal_poem.jpg"
  ],
  "permissions": [
    "https://*/*", "activeTab", "tabs", "webNavigation", "storage"
  ]
}
